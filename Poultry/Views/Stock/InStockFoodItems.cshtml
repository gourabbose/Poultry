@model IEnumerable<Poultry.Models.Stock>

@{
    ViewBag.Title = "In Stock (Food Items)";
}

<h2>Stock >> Current Stock</h2>
<h2>In Stock (Food Items)</h2>

<fieldset style="padding-top:20px;">
    <legend>Stock</legend>
    @if(Model.Count()>0)
    {
    <table>
        <tr>
            <th>Items
            </th>
            <th>Quantity
            </th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td class="display-label">
                    @Html.DisplayName(m.Item.Name)
                </td>
                <td class="display-field">
                    @Html.DisplayName(m.Quantity.ToString()) @m.Item.Unit
                </td>
            </tr>
        }
    </table>
    }
    else
    {
     <strong>Empty.<br /> Please Add Items from Vendor Menu.</strong>   
    }
</fieldset>
